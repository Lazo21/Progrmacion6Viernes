@page
@model WebApp_Inquilino.Pages.TipoInquilino.GridModel
@{
}

<div class="container-fluid">

    <div class="card">
        <div class="card-header">
            Inquilino
        </div>
        <div class="card-body">

            <div class="row">
                <div class="col-12">
                    <table id="GridView" class="table table-bordered table table-striped table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Descripcion</th>
                                <th>Estado</th>
                            </tr>
                        </thead>
                        <tboby>
                            @foreach (var item in Model.GridList)
                            {
                                <tr>
                                    <td>@item.IdEmpleado</td>
                                    <td>@item.Nombre</td>
                                    <td>@item.PrimerApellido</td>
                                    <td>@item.SegundoApellido</td>
                                    <td>@item.Edad</td>
                                    <td>@item.FechaNacimiento.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <a class="btn btn-primary" asp-page="Edit" asp-route-id="@item.Id_TipoInquilino"><i class='bx bx-edit-alt'></i></a>

                                        <button type="button" class="btn btn-danger" onclick="EmpleadoGrid.OnClickEliminar(@item.Id_TipoInquilino)">
                                            <i class='bx bx-trash'></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tboby>
                    </table>

                </div>
            </div>



        </div>
    </div>


</div>

@section Scripts{

    <script>
        var MensajeApp = "@Html.Raw(Model.Mensaje)";
    </script>

    <script defer src="~/App/TipoInquilino/Grid.js"></script>

}

